input "type:keyboard" {
	repeat_delay 224
	repeat_rate 32
	xkb_layout us,ru
	xkb_numlock enabled
	xkb_options grp:caps_toggle,compose:ralt,grp_led:scroll
}

input "type:pointer" {
	accel_profile adaptive
	left_handed disabled
	pointer_accel -0.33
	scroll_factor 1
}

input "type:touchpad" {
	accel_profile adaptive
	dwt enabled
	left_handed disabled
	natural_scroll disabled
	pointer_accel -0.33
	tap enabled
}
